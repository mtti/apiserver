{
  "name": "@mtti/apiserver",
  "version": "0.2.0",
  "description": "Microframework for RESTful JSON CRUD APIs",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "setup": "npm install",
    "build": "npm run clean && tsc",
    "test": "npm run lint && npm run jest:ts && npm run jest:js",
    "lint": "npm run lint:ts && npm run lint:js",
    "lint:js": "eslint 'src/**/*.spec.js' 'integration-tests/**/*.js'",
    "lint:ts": "tslint 'src/**/*.ts'",
    "jest:js": "jest --config ./jest.config.js.json",
    "jest:ts": "jest --config ./jest.config.ts.json",
    "tsc": "tsc",
    "tslint": "tslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "clean": "rm -rf ./dist"
  },
  "dependencies": {
    "ajv": "^6.10.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "fast-json-patch": "^2.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/express": "4.17.0",
    "@types/fast-json-patch": "1.1.5",
    "@types/jest": "24.0.15",
    "@types/uuid": "3.4.5",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-plugin-import": "2.18.2",
    "jest": "24.8.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "files": [
    "dist"
  ]
}
