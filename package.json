{
  "name": "@mtti/apiserver",
  "version": "0.1.0",
  "description": "Library for reducing boilerplate when building RESTful JSON APIs",
  "main": "dist/index.js",
  "private": true,
  "engines": {
    "node": ">=8.10.0"
  },
  "scripts": {
    "setup": "npm install",
    "build": "npm run clean && tsc",
    "test": "npm run lint && npm run jest:ts && npm run jest:js",
    "lint": "npm run lint:ts && npm run lint:js",
    "lint:js": "eslint 'src/**/*.spec.js' 'integration-tests/**/*.js'",
    "lint:ts": "tslint 'src/**/*.ts'",
    "jest:js": "jest --config ./jest.config.js.json",
    "jest:ts": "jest --config ./jest.config.ts.json",
    "tsc": "tsc",
    "tslint": "tslint",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test",
    "clean": "rm -rf ./dist"
  },
  "dependencies": {
    "ajv": "6.10.0",
    "body-parser": "1.19.0",
    "express": "4.17.0",
    "fast-json-patch": "2.1.0",
    "uuid": "3.3.2"
  },
  "devDependencies": {
    "@types/body-parser": "1.17.0",
    "@types/express": "4.16.1",
    "@types/fast-json-patch": "1.1.5",
    "@types/jest": "24.0.13",
    "@types/uuid": "3.4.4",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "jest": "24.8.0",
    "ts-jest": "24.0.2",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  },
  "files": [
    "dist"
  ]
}
